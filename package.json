{
  "private": false,
  "name": "ZapSDK",
  "engines": {
    "node": ">=6.12"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ganache": "ganache-cli -p 8545 --networkId 5777",
    "compile": "./node_modules/lerna run build",
    "build": "./node_modules/.bin/lerna bootstrap --hoist && ./node_modules/.bin/lerna run build",
    "test": "./node_modules/.bin/lerna exec npm run run_test --concurrency=1",
    "webpack": "./node_modules/.bin/lerna exec npm run webpack --scope='zapjs'",
    "bundle": "run-s build webpack",
    "generateDoc": "./node_modules/.bin/compodoc -p docstsconfig.json --watch --disableCoverage --hideGenerator --serve "
  },
  "dependencies": {
    "@compodoc/compodoc": "^1.1.3",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.4",
    "awesome-typescript-loader": "^5.2.0",
    "bignumber.js": "^7.2.1",
    "cache-loader": "^1.2.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "documentation": "^8.0.1",
    "ethereumjs-wallet": "^0.6.0",
    "ganache-core": "^2.1.5",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "path": "^0.12.7",
    "prettier": "^1.13.7",
    "require-all": "^3.0.0",
    "truffle-artifactor": "^3.0.7",
    "truffle-hdwallet-provider": "0.0.3",
    "truffle-migrate": "^2.0.8",
    "truffle-resolver": "^4.0.4",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "type2docfx": "^0.9.100",
    "typedoc": "^0.11.1",
    "typedoc-clarity-theme": "^1.1.0",
    "typedoc-markdown-theme": "0.0.4",
    "typescript-docs": "^1.0.1",
    "web3": "^1.0.0-beta.34",
    "web3-utils": "^1.0.0-beta.34",
    "webpack-log": "^1.2.0",
    "zap_contracts": "git+https://github.com/zapproject/zap-ethereum-api.git#RC2"
  },
  "devDependencies": {
    "@types/node": "^10.5.2",
    "coveralls": "^3.0.2",
    "ganache-cli": "^6.1.4",
    "lerna": "^2.11.0",
    "npm-run-all": "^4.1.3",
    "truffle-core": "^4.1.13",
    "typescript": "^2.9.2"
  },
  "repository": "https://github.com/zapproject/Zap-monorepo",
  "publishConfig": {
    "access": "public"
  }
}
